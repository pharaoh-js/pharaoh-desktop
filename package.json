{
  "name": "pharaoh",
  "version": "0.6.0",
  "description": "A desktop app to interface with the Pharaoh live code broadcasting tool.",
  "main": "./public/index.html",
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "start": "./index.js",
    "lint": "./node node_modules/.bin/eslint -c .eslintrc src/**"
  },
  "window": {
    "title": "Pharaoh",
    "icon": "icon.png",
    "toolbar": true,
    "frame": true,
    "single-instance": false,
    "width": 1600,
    "height": 900,
    "min_width": 400,
    "min_height": 300,
    "position": "center",
    "js-flags": "--remote-debugging-port=9876",
    "dom_storage_quota": 64,
    "as_desktop": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pharaoh-js/pharaoh-desktop.git"
  },
  "keywords": [
    "live",
    "student",
    "desktop",
    "node-webkit",
    "nwjs",
    "nw.js",
    "nw-js",
    "electron",
    "instructor",
    "ide",
    "editor",
    "atom",
    "react"
  ],
  "author": "Pharaoh Team",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/pharaoh-js/pharaoh-desktop/issues"
  },
  "homepage": "https://github.com/pharaoh-js/pharaoh-desktop#readme",
  "dependencies": {
    "firebase": "^2.3.2",
    "firepad": "^1.3.0",
    "history": "^1.17.0",
    "nwjs": "0.0.15",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "react-fontawesome": "^0.3.3",
    "react-inline-css": "^2.0.1",
    "react-router": "^1.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.3.26",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.14.0",
    "less": "^2.5.3",
    "less-loader": "^2.2.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  }
}


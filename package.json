{
  "name": "pharaoh",
  "description": "A desktop app for the Pharaoh live programming tool.",
  "version": "0.9.7",
  "author": {
    "name": "Zac Anger",
    "email": "zac@zacanger.com",
    "url": "http://zacanger.com"
  },
  "contributors": [
    "Pharaoh Team"
  ],
  "license": "WTFPL",
  "main": "./public/index.html",
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "app": "electron electron.js",
    "build": "NODE_ENV=production npm run clean && webpack -p --config webpack.config.prod.js",
    "clean": "if [ -f public/bundle.js ] ; then rm public/bundle.js ; fi",
    "dev": "webpack-dev-server --config webpack.config.js --hot --inline",
    "postinstall": "nw install 0.15.0",
    "release": "electron-packager . Pharaoh --platform=all --arch=all --version=1.0.0 --out=./binararies",
    "start": "./index.js",
    "test:lint": "eslint -c .eslintrc.json src/",
    "tidy": "npm i && npm ddp && npm prune"
  },
  "homepage": "https://github.com/pharaoh-js/pharaoh-desktop#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:pharaoh-js/pharaoh-desktop.git"
  },
  "bugs": "https://github.com/pharaoh-js/pharaoh-desktop/issues",
  "keywords": [
    "codemirror",
    "desktop",
    "editor",
    "ide",
    "instructor",
    "node-webkit",
    "nw-js",
    "nw.js",
    "nwjs",
    "react",
    "student"
  ],
  "dependencies": {
    "babel-plugin-transform-class-properties": "6.18.0",
    "electron-prebuilt": "1.4.6",
    "history": "1.12.0",
    "nwjs": "1.4.3",
    "react": "15.3.2",
    "react-css-modules": "3.7.10",
    "react-dom": "15.3.2",
    "react-router": "1.0.0"
  },
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-eslint": "7.1.0",
    "babel-loader": "6.2.7",
    "babel-plugin-transform-es2015-modules-commonjs": "6.18.0",
    "babel-preset-latest": "6.16.0",
    "babel-preset-react": "6.16.0",
    "css-loader": "0.25.0",
    "css-modules-require-hook": "4.0.5",
    "electron-debug": "1.1.0",
    "electron-packager": "8.2.0",
    "eslint": "3.10.0",
    "eslint-config-standard": "6.2.1",
    "eslint-config-standard-jsx": "3.2.0",
    "eslint-config-standard-react": "4.2.0",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-promise": "3.3.2",
    "eslint-plugin-react": "6.6.0",
    "eslint-plugin-standard": "2.0.1",
    "postcss": "5.2.5",
    "postcss-cssnext": "2.8.0",
    "postcss-import": "8.2.0",
    "postcss-loader": "1.1.1",
    "postcss-mixins": "5.4.0",
    "postcss-modules-extract-imports": "1.0.1",
    "postcss-modules-local-by-default": "1.1.1",
    "postcss-modules-scope": "1.0.2",
    "postcss-modules-values": "1.2.2",
    "style-loader": "0.13.1",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2"
  },
  "chromium-args": "--remote-debugging-port=9876",
  "window": {
    "title": "Pharaoh",
    "icon": "./icon.png",
    "exe_icon": "./icon.png",
    "mac_icon": "./icon.png",
    "toolbar": false,
    "frame": true,
    "single-instance": false,
    "width": 1600,
    "height": 900,
    "min_width": 400,
    "min_height": 300,
    "position": "center",
    "dom_storage_quota": 64,
    "show_in_taskbar": true,
    "as_desktop": true
  }
}
